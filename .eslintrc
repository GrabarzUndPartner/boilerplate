{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "json"
  ],
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "standard/no-callback-literal": "off",
    "import/no-webpack-loader-syntax": "off",
    "no-new": "off",
    "no-debugger": "off",
    "no-console": "off",
    "semi": [
      "error",
      "always"
    ],
    "complexity": [
      "error",
      {
        "max": 7
      }
    ]
  },
  "globals": {
    "$": "readonly",
    "console": "readonly"
  }
}
