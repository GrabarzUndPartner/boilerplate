.partial[data-partial="atoms/figcaption"] {
  display: block;
  width: 50%;

  .partial[data-partial*="atoms/headline"] {
    display: inline-block;
    padding: 0.2em 0.5em;
    margin: 0;
    color: rgb(255, 255, 255);
    background-color: rgb(0, 0, 0);
  }

  .partial[data-partial*="atoms/text"] {
    display: block;
    padding: 0.2em 0.5em;
    margin: 0;
    color: rgb(255, 255, 255);
    background-color: rgb(120, 120, 120);
  }
}
