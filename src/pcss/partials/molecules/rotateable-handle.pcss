.partial[data-partial="molecules/rotateable-handle"] {
  position: relative;
  width: 100%;
  height: 100%;
  border: 1px solid black;
  border-radius: 50%;

  &::before {
    display: block;
    padding-bottom: 100%;
    content: "";
  }

  .handle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 5em;
    height: 5em;
    margin-top: -2.5em;
    margin-left: -2.5em;
    border: 1px solid black;
    border-radius: 50%;
  }
}
