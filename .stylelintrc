{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended",
    "stylelint-config-recess-order",
    "stylelint-config-css-modules"
  ],
  "ignoreFiles": [
    "./**/*.js"
  ],
  "rules": {
    "no-empty-source": null,
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
    "no-descending-specificity": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "mixin",
          "define-mixin"
        ]
      }
    ]
  }
}
