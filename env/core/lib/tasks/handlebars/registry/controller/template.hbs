const controllers = [];
{{#each sources}}
{{#if chunk}}
controllers.push({name: '{{{name}}}', chunk: true, controller: function (cb) {
    require.ensure([], function(require) {
        cb(require('{{{controller}}}').default);
    }, '{{{chunk}}}');
}});
{{else}}
import component{{{@index}}} from '{{{controller}}}';
controllers.push({name: '{{{name}}}', controller: (component{{{@index}}})});
{{/if}}
{{/each}}
export default controllers;
