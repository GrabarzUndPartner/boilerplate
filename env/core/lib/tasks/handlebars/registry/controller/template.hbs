{{#each controllers}}
{{#unless async}}
import controller{{{@index}}} from '{{{controller}}}';
{{/unless}}
{{/each}}

const controllers = [];

{{#each controllers}}
{{#if async}}
controllers.push({
  async: {{{async}}},
  name: '{{{name}}}',
  controller: () => import('{{{controller}}}')
});
{{else}}
controllers.push({
  async: false,
  name: '{{{name}}}',
  controller: controller{{{@index}}}
});
{{/if}}
{{/each}}

export default controllers;
