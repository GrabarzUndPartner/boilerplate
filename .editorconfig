# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.pcss]
quote_type = double

[*.js]
quote_type = single
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.css]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
