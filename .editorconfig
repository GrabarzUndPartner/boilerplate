# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
max_line_length = 120
quote_type = single
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.css]
indent_style = space
indent_size = 2

[*.pcss]
max_line_length = 300
quote_type = double
indent_style = space
indent_size = 2
